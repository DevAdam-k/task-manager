<div class="max-w-2xl mx-auto bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow-md p-6 mt-10">
  <% if @task.image.attached? %>
    <div class="mb-6">
      <%= image_tag @task.image.variant(resize_to_limit: [800, 400]), class: "rounded-lg w-full object-cover" %>
    </div>
  <% end %>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-4"><%= @task.title %></h1>

  <% if @task.description.present? %>
    <p class="text-lg text-gray-700 dark:text-gray-300 mb-4"><%= @task.description %></p>
  <% end %>

  <div class="mb-6">
    <p class="text-sm text-gray-600 dark:text-gray-400 mb-1">
      <span class="font-medium">Due Date:</span> <%= @task.due_date.strftime("%B %d, %Y") %>
    </p>
    <p class="text-sm text-gray-600 dark:text-gray-400">
      <span class="font-medium">Status:</span>
      <% if @task.completed %>
        <span class="inline-block px-2 py-1 bg-green-100 text-green-800 text-xs font-semibold rounded dark:bg-green-900 dark:text-green-300">Completed</span>
      <% else %>
        <span class="inline-block px-2 py-1 bg-yellow-100 text-yellow-800 text-xs font-semibold rounded dark:bg-yellow-900 dark:text-yellow-300">Pending</span>
      <% end %>
    </p>
  </div>

  <div class="flex justify-end gap-4">
    <%= link_to 'Back', tasks_path,
      class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-gray-200 rounded-lg hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-400 dark:bg-gray-700 dark:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-500" %>
  </div>
</div>
